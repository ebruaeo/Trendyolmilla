<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tasarÄ±mConstraint"
    android:layout_margin="4dp"
    android:layout_width="136dp"
    android:layout_height="264dp"
    android:backgroundTint="#FEFEFE"
    android:background="@drawable/layout_bg"
    >


    <ImageView
        android:id="@+id/imageClothe"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pantolon" />

    <ImageView
        android:id="@+id/favButton"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@+id/imageClothe"
        app:layout_constraintTop_toTopOf="@+id/imageClothe"
        app:srcCompat="@drawable/ic_fav" />

    <TextView
        android:id="@+id/textMarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/marka"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageClothe"
        app:layout_constraintTop_toBottomOf="@+id/imageClothe" />

    <TextView
        android:id="@+id/textExplanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="@string/explanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMarka" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="246.99 TL"
        android:textColor="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textExplanation" />

</androidx.constraintlayout.widget.ConstraintLayout>